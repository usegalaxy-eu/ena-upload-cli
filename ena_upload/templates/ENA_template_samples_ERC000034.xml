            <SAMPLE_ATTRIBUTE>
                <TAG>diagnosis</TAG>
                <VALUE>${row['diagnosis']}</VALUE>
            </SAMPLE_ATTRIBUTE>
            <SAMPLE_ATTRIBUTE>
                <TAG>strain</TAG>
                <VALUE>${row['strain']}</VALUE>
